# Airways .env example (do not use secrets here)

# Server
PORT=3000
CORS_ORIGIN=*

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=airways
DB_LOGGING=false

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=

# JWT
JWT_SECRET=changeme
JWT_ACCESS_TTL=1d
JWT_EXPIRES_IN=1d

# Seed SUPER ADMIN on startup
SUPERADMIN_EMAIL=
SUPERADMIN_PASSWORD=
SUPERADMIN_FULLNAME=

# Mail (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_NAME=Airways
SMTP_FROM_EMAIL=noreply@example.com
FRONTEND_URL=http://localhost:5173

# AWS S3 (required for News file upload)
AWS_REGION=
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Optional: if using CDN/custom domain for S3
# AWS_S3_PUBLIC_BASE_URL=https://cdn.example.com

# Strict validation is enforced in config (see src/config/validation.ts)
