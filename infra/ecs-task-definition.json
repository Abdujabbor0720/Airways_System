{
  "family": "airways-task",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "REPLACE_WITH_EXECUTION_ROLE_ARN",
  "taskRoleArn": "REPLACE_WITH_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "REPLACE_WITH_CONTAINER_NAME",
      "image": "REPLACE_WITH_IMAGE_URI",
      "essential": true,
      "portMappings": [
        { "containerPort": 3000, "hostPort": 3000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/airways",
          "awslogs-region": "REPLACE_WITH_AWS_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}

